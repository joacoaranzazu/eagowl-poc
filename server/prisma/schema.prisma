// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Core User Management
model User {
  id                String    @id @default(cuid())
  username          String    @unique
  email             String?   @unique
  passwordHash      String    @map("password_hash")
  firstName         String?   @map("first_name")
  lastName          String?   @map("last_name")
  role              UserRole  @default(USER)
  status            UserStatus @default(OFFLINE)
  emergencyProfileId String?   @map("emergency_profile_id")
  priority          Int       @default(0)
  avatar            String?
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  lastLoginAt       DateTime? @map("last_login_at")

  // Relations
  emergencyProfile  EmergencyProfile? @relation(fields: [emergencyProfileId], references: [id])
  userGroups        UserGroup[]
  pttSessions       PTTSession[]      @relation("UserSessions")
  sentMessages      Message[]         @relation("SentMessages")
  locations         Location[]
  emergencyAlerts   EmergencyAlert[]
  devices           Device[]
  recordings        Recording[]

  @@map("users")
}

model Group {
  id                String     @id @default(cuid())
  name              String
  description       String?
  sipId             String?    @map("sip_id")
  type              GroupType  @default(REGULAR)
  maxParticipants   Int        @default(50) @map("max_participants")
  isActive          Boolean    @default(true) @map("is_active")
  priority          Int        @default(0)
  createdBy         String?    @map("created_by")
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")

  // Relations
  userGroups        UserGroup[]
  pttSessions       PTTSession[]
  messages          Message[]

  @@map("groups")
}

model UserGroup {
  userId       String @map("user_id")
  groupId      String @map("group_id")
  permissions  GroupPermissions @default(MEMBER)
  priority     Int    @default(0)
  joinedAt     DateTime @default(now()) @map("joined_at")

  // Relations
  user         User @relation(fields: [userId], references: [id], onDelete: Cascade)
  group        Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([userId, groupId])
  @@map("user_groups")
}

// PTT Sessions and Media
model PTTSession {
  id              String      @id @default(cuid())
  groupId         String      @map("group_id")
  callerId        String      @map("caller_id")
  startTime       DateTime    @map("start_time")
  endTime         DateTime?   @map("end_time")
  duration        Int?        // seconds
  recordingPath   String?     @map("recording_path")
  sessionType     SessionType @default(VOICE) @map("session_type")
  isActive        Boolean     @default(true) @map("is_active")
  quality         String?     // "excellent", "good", "poor"
  participants    Int         @default(1)

  // Relations
  group           Group @relation(fields: [groupId], references: [id])
  caller          User  @relation("UserSessions", fields: [callerId], references: [id])
  recordings      Recording[]

  @@map("ptt_sessions")
}

model Recording {
  id              String      @id @default(cuid())
  sessionId       String      @map("session_id")
  filePath        String      @map("file_path")
  fileType        String      @map("file_type") // "mp3", "mkv", "wav"
  fileSize        BigInt      @map("file_size") // bytes
  duration        Int         // seconds
  quality         String?
  createdAt       DateTime    @default(now()) @map("created_at")

  // Relations
  session         PTTSession @relation(fields: [sessionId], references: [id])

  @@map("recordings")
}

// Location Tracking
model Location {
  id              String    @id @default(cuid())
  userId          String    @map("user_id")
  latitude        Decimal   @db.Decimal(10, 8)
  longitude       Decimal   @db.Decimal(11, 8)
  accuracy        Decimal?  @db.Decimal(8, 2) // meters
  altitude        Decimal?  @db.Decimal(8, 2) // meters
  speed           Decimal?  @db.Decimal(5, 2) // km/h
  heading         Int?      // degrees 0-359
  timestamp       DateTime
  locationSource  String    @map("location_source") // "gps", "network", "passive"

  // Relations
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("locations")
}

// Messaging System
model Message {
  id              String       @id @default(cuid())
  senderId        String       @map("sender_id")
  recipientId     String?      @map("recipient_id")
  groupId         String?      @map("group_id")
  messageType     MessageType  @default(TEXT) @map("message_type")
  content         String
  filePath        String?      @map("file_path")
  fileName        String?      @map("file_name")
  fileSize        BigInt?      @map("file_size")
  timestamp       DateTime     @default(now())
  delivered       Boolean      @default(false)
  read            Boolean      @default(false)
  editedAt        DateTime?    @map("edited_at")
  replyToId       String?      @map("reply_to_id")

  // Relations
  sender          User @relation("SentMessages", fields: [senderId], references: [id])
  recipient       User? @relation("ReceivedMessages", fields: [recipientId], references: [id])
  group           Group? @relation(fields: [groupId], references: [id])

  @@map("messages")
}

// Emergency System
model EmergencyProfile {
  id              String                    @id @default(cuid())
  name            String
  sosEnabled      Boolean                   @default(true) @map("sos_enabled")
  manDownEnabled  Boolean                   @default(true) @map("man_down_enabled")
  manDownTimeout  Int                       @default(30) @map("man_down_timeout") // seconds
  autoNotifyUsers String[]                  @default([]) @map("auto_notify_users")
  priorityLevel   EmergencyPriority         @default(MEDIUM) @map("priority_level")
  escalationRules  EmergencyEscalationRule[]

  // Relations
  users           User[]

  @@map("emergency_profiles")
}

model EmergencyAlert {
  id              String            @id @default(cuid())
  userId          String            @map("user_id")
  alertType       EmergencyType      @map("alert_type")
  locationId      String?           @map("location_id")
  status          AlertStatus       @default(ACTIVE)
  priority        Int               @default(1)
  notes           String?
  createdAt       DateTime          @default(now()) @map("created_at")
  resolvedAt      DateTime?         @map("resolved_at")
  resolvedBy      String?           @map("resolved_by")

  // Relations
  user            User @relation(fields: [userId], references: [id])
  location        Location? @relation(fields: [locationId], references: [id])

  @@map("emergency_alerts")
}

// Device Management
model Device {
  id              String            @id @default(cuid())
  userId          String            @map("user_id")
  deviceId        String            @unique @map("device_id")
  deviceType      DeviceType        @map("device_type")
  platform        String            // "android", "ios", "windows", "linux"
  appVersion      String?           @map("app_version")
  lastSeen        DateTime?         @map("last_seen")
  isActive        Boolean           @default(true) @map("is_active")
  capabilities    DeviceCapability[]
  configuration    Json?             // Device-specific settings

  // Relations
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("devices")
}

model DeviceCapability {
  id              String @id @default(cuid())
  deviceId        String @map("device_id")
  capability      String // "ptt_voice", "ptt_video", "gps", "camera", "nfc"
  isSupported     Boolean @default(true) @map("is_supported")

  // Relations
  device          Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@map("device_capabilities")
}

// DMR Integration
model DMRGateway {
  id              String    @id @default(cuid())
  name            String
  ipAddress       String    @map("ip_address") @db.Inet
  port            Int       @default(5060)
  protocolVersion String?   @map("protocol_version")
  status          GatewayStatus @default(OFFLINE)
  configuration    Json?
  lastHeartbeat   DateTime? @map("last_heartbeat")
  createdAt       DateTime  @default(now()) @map("created_at")

  @@map("dmr_gateways")
}

// Enums
enum UserRole {
  ADMIN
  OPERATOR
  USER
  GUEST
}

enum UserStatus {
  ONLINE
  OFFLINE
  BUSY
  AWAY
  IN_PTT_CALL
}

enum GroupType {
  REGULAR
  EMERGENCY
  DISPATCH
  DMR
}

enum GroupPermissions {
  ADMIN
  MODERATOR
  MEMBER
  GUEST
}

enum SessionType {
  VOICE
  VIDEO
  HYBRID
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  LOCATION
  SYSTEM
  EMERGENCY
}

enum EmergencyType {
  SOS
  MAN_DOWN
  MEDICAL
  SAFETY
  DEVICE_FAILURE
  COMMUNICATION_LOST
}

enum EmergencyPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AlertStatus {
  ACTIVE
  RESOLVED
  FALSE_ALARM
  ESCALATED
}

enum DeviceType {
  MOBILE
  TABLET
  DESKTOP
  RADIO
  IOT
}

enum GatewayStatus {
  ONLINE
  OFFLINE
  CONNECTING
  ERROR
}

// Emergency Profile additional models
model EmergencyEscalationRule {
  id                  String              @id @default(cuid())
  emergencyProfileId  String              @map("emergency_profile_id")
  condition           String              // "no_response_5min", "priority_high"
  action              EmergencyAction
  target              String?             // email, phone, user_id
  delay               Int                 @default(300) // seconds
  isActive            Boolean             @default(true) @map("is_active")

  // Relations
  emergencyProfile    EmergencyProfile @relation(fields: [emergencyProfileId], references: [id], onDelete: Cascade)

  @@map("emergency_escalation_rules")
}

enum EmergencyAction {
  NOTIFY_OPERATOR
  NOTIFY_SUPERVISOR
  SEND_EMAIL
  SEND_SMS
  ACTIVATE_SIREN
  ESCALATE_PRIORITY
  LOCK_DOWN
}