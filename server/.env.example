# Environment Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Database Configuration
DATABASE_URL="postgresql://eagowl_poc_user:changeme@localhost:5432/eagowl_poc_db"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# WebSocket Configuration
WS_PORT=9998
WS_HOST=0.0.0.0

# Media Configuration
MEDIA_STORAGE_PATH=./storage/media
RECORDING_PATH=./storage/recordings
UPLOAD_MAX_SIZE=50MB

# STUN/TURN Server Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# DMR Integration
DMR_GATEWAY_ENABLED=false
DMR_GATEWAY_HOST=
DMR_GATEWAY_PORT=5060

# Emergency Configuration
EMERGENCY_NOTIFICATION_ENABLED=true
EMERGENCY_EMAIL_RECIPIENTS=
EMERGENCY_SMS_ENABLED=false

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090