# EAGOWL-POC Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=eagowl_poc_db
POSTGRES_USER=eagowl_poc_user
POSTGRES_PASSWORD=secure_password_change_this
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_PORT=6379

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_change_this_in_production_64_chars_minimum
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Network Ports Configuration
HTTP_PORT=80
HTTPS_PORT=443
API_PORT=8080
WS_PORT=9998
METRICS_PORT=9090
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# WebRTC STUN/TURN Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_USERNAME=eagowl_user
TURN_PASSWORD=secure_turn_password_change_this

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password_change_this

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Storage Paths (relative to container)
MEDIA_STORAGE_PATH=/app/storage/media
RECORDING_PATH=/app/storage/recordings

# Performance Configuration
MAX_CONCURRENT_USERS=1000
PTT_SESSION_TIMEOUT=3600
LOCATION_HISTORY_DAYS=30
MESSAGE_HISTORY_DAYS=90

# Emergency Configuration
EMERGENCY_NOTIFICATION_ENABLED=true
EMERGENCY_EMAIL_RECIPIENTS=admin@yourcompany.com,ops@yourcompany.com
EMERGENCY_SMS_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *    # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Development Overrides
NODE_ENV=production
DEBUG=false